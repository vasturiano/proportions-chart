{
  "name": "proportions-chart",
  "version": "1.5.3",
  "description": "A one-dimensional proportional chart web component for visualizing categorical data",
  "license": "MIT",
  "type": "module",
  "unpkg": "dist/proportions-chart.min.js",
  "jsdelivr": "dist/proportions-chart.min.js",
  "main": "dist/proportions-chart.mjs",
  "module": "dist/proportions-chart.mjs",
  "types": "dist/proportions-chart.d.ts",
  "exports": {
    "umd": "./dist/proportions-chart.min.js",
    "default": "./dist/proportions-chart.mjs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vasturiano/proportions-chart.git"
  },
  "homepage": "https://github.com/vasturiano/proportions-chart",
  "keywords": [
    "proportions",
    "chart",
    "data-visualization",
    "d3",
    "categorical-data"
  ],
  "author": {
    "name": "Vasco Asturiano",
    "url": "https://github.com/vasturiano"
  },
  "bugs": {
    "url": "https://github.com/vasturiano/proportions-chart/issues"
  },
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "rimraf dist && rollup -c",
    "dev": "rollup -w -c",
    "prepare": "npm run build"
  },
  "dependencies": {
    "accessor-fn": "1",
    "d3-scale": "1 - 4",
    "d3-selection": "2 - 3",
    "d3-shape": "1 - 3",
    "d3-transition": "2 - 3",
    "float-tooltip": "1",
    "kapsule": "^1.16",
    "tinycolor2": "^1.6.0"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^28.0.2",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-terser": "^0.4.4",
    "postcss": "^8.4.49",
    "rimraf": "^6.0.1",
    "rollup": "^4.30.1",
    "rollup-plugin-dts": "^6.1.1",
    "rollup-plugin-postcss": "^4.0.2",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=12"
  }
}
